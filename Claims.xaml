<Window x:Class="OtusExam.Claims"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OtusExam"
        mc:Ignorable="d"
        Title="Claims" Height="450" Width="800">
    <Grid>
        <ListView x:Name="ClaimsListView" HorizontalAlignment="Stretch"  
     Margin="4 8" VerticalAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=MonetaryСlaimid}" Header="ID" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Supplyid}" Header="Поставка" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Amount}" Header="Сумма" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
