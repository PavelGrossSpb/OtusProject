<Window x:Class="OtusExam.IncomingPayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OtusExam"
        mc:Ignorable="d"
        Title="Входящий платеж" Height="250" Width="180">
    <StackPanel Margin="8">
        <Label  HorizontalAlignment="Center">Номер договора</Label>
        <TextBox x:Name="ContractNumTb" Width=" 100" HorizontalAlignment="Center"/>
        <Label  HorizontalAlignment="Center">Номер накладной</Label>
        <TextBox x:Name="InvoiceNumTb" Width=" 100" HorizontalAlignment="Center"/>
        <Label  HorizontalAlignment="Center">Сумма</Label>
        <TextBox x:Name="AmountTb" Width=" 100" HorizontalAlignment="Center"/>
        <Button Click="Button_Click" Margin="16">Обработать</Button>
    </StackPanel>
</Window>
